# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api

# Development
VITE_PORT=5173
VITE_HOST=localhost

# Feature Flags
VITE_ENABLE_DEBUG_LOGS=true

# Analytics (optional)
# VITE_GOOGLE_ANALYTICS_ID=your-analytics-id-here

# Authentication (if needed)
# VITE_AUTH_BASE_URL=http://localhost:8000/auth
# VITE_JWT_SECRET=your-jwt-secret-here

# Environment
NODE_ENV=development

# Notes:
# - All variables should be prefixed with VITE_ to be accessible in your React app
# - Replace localhost with your actual API server address in production
# - Copy this file to .env and modify the values as needed for your environment

API_BASE_URL=http://localhost:8000/api
